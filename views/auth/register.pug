extends ../layout/index

block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page
        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xd text-center p-2 mb-1 font-bold")=error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="register")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="name") Tu Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="name" value= user ? user.name : '')

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Correo Electronico
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="example@hotmail.com" type="email" name="email" value= user ? user.email : '')

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="cellphone" value= user ? user.cellphone : '') Celular
                        input#cellphone.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Sin extension" type="text" name="cellphone" value=user ? user.cellphone : '')

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="min 8 carácteres" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeat_password") Repetir Contraseña
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir contraseña" type="password" name="repeat_password")

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 test-white font-bold py-3 cursor-pointer" value="Registrarse" type="submit")
                    
                    div 
                        span 
                            a(href="login" class="text-gray-500 text-sm") ¿Ya tienes cuenta? Inicia Sesión