extends ../layout/index

block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page
        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p(class="bg-red-600 text-white uppercase text-xd text-center p-2 mb-1 font-bold")=error.msg
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="new_password") Nueva contraseña
                        input#e-mail.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Minimo 8 caracteres" type="password" name="new_password")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repeat_new_password") Repita su nueva contraseña
                        input#e-mail.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repetir nueva contraseña" type="password" name="repeat_new_password")
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 test-white font-bold py-3 cursor-pointer" value="Confirmar" type="submit")
                    div 
                        span 
                            a(href="login" class="text-gray-500 text-sm") Cancelar 