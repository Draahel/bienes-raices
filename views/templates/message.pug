extends ../layout/index

block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto text-center")
            p(class=error ? "bg-red-500 text-white" : "bg-green-500").py-2.px-5.rounded-lg.w-full.mb-5.font-bold= msg
            if error
                a(href="/" class="bg-red-500 text-white py-3 px-7 font-bold") Inicio
            else 
                a(href="/auth/login" class="bg-green-500  py-3 px-7 font-bold") Iniciar Sesion